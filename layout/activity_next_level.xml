                        <TextView
                            android:id="@+id/tha4"
                            style="@style/smallerView"
                            android:text="@string/ff" />

                        <TextView
                            android:id="@+id/tha5"
                            style="@style/smallerView"
                            android:text="IOT&amp;A" />

                        <TextView
                            style="@style/smallerView"
                            android:background="@null"
                            android:text="Break" />

                        <TextView
                            android:id="@+id/tha6"
                            style="@style/smallerView"
                            android:text="UHV" />

                        <TextView
                            android:id="@+id/tha7"
                            style="@style/smallerView"
                            android:text="LAB" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/fri"
                        android:background="@drawable/from_left">

                        <TextView
                            style="@style/headTextView"
                            android:text="FRI" />

                        <TextView
                            android:id="@+id/fri1"
                            style="@style/smallerView"
                            android:text="TTSD/DL" />

                        <TextView
                            android:id="@+id/fri2"
                            style="@style/smallerView"
                            android:text="TTSD/CC" />

                        <TextView
                            android:id="@+id/fri3"
                            style="@style/smallerView"
                            android:text="TTSD/WNS" />

                        <TextView
                            style="@style/smallerView"
                            android:background="@null"
                            android:text="A\nK" />

                        <TextView
                            android:id="@+id/fri4"
                            style="@style/smallerView"
                            android:text="@string/ff" />

                        <TextView
                            android:id="@+id/fri5"
                            style="@style/smallerView"
                            android:text="IOT&amp;A" />

                        <TextView
                            style="@style/smallerView"
                            android:background="@null"
                            android:text="Break" />

                        <TextView
                            android:id="@+id/fri6"
                            style="@style/smallerView"
                            android:text="UHV" />

                        <TextView
                            android:id="@+id/fri7"
                            style="@style/smallerView"
                            android:text="SPORTS" />

                    </TableRow>

                    <TableRow android:id="@+id/sat">

                        <TextView
                            style="@style/headTextView"
                            android:text="SAT" />

                        <TextView
                            android:id="@+id/sat1"
                            style="@style/smallerView"
                            android:text="TTSD/DL" />

                        <TextView
                            android:id="@+id/sat2"
                            style="@style/smallerView"
                            android:text="TTSD/CC" />

                        <TextView
                            android:id="@+id/sat3"
                            style="@style/smallerView"
                            android:text="TTSD/WNS" />

                        <TextView

                            style="@style/smallerView"
                            android:background="@null" />

                        <TextView
                            android:id="@+id/sat4"
                            style="@style/smallerView"
                            android:text="@string/ff" />

                        <TextView
                            android:id="@+id/sat5"
                            style="@style/smallerView"
                            android:text="IOT&amp;A" />

                        <TextView
                            style="@style/smallerView"
                            android:background="@null"
                            android:text="Break" />

                        <TextView
                            android:id="@+id/sat6"
                            style="@style/smallerView"
                            android:text="UHV" />

                        <TextView
                            android:id="@+id/sat7"
                            style="@style/smallerView"
                            android:text="LIBRARY" />

                    </TableRow>


                </TableLayout>


            </LinearLayout>
        </HorizontalScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/curve"
            android:backgroundTint="@color/white"
            android:text="Send"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLay"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>


</ScrollView>